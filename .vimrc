" Setting
set fenc=utf-8
set nobackup
set noswapfile
set autoread
set hidden
set showcmd
set title

" Indent
set autoindent
set smartindent

" Appearance
set number
set cursorline
set showmatch
syntax on

" Search
set ignorecase
set smartcase
set incsearch
set wrapscan
nmap <Esc><Esc> :nohlsearch<CR><Esc>
